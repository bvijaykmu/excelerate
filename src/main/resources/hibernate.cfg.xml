<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.password">grit123</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/benq</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.connection.pool_size">50</property>
		<property name="hibernate.generate_statistics">true</property>
		<property name="cache.use_second_level_cache">false</property>
		<property name="hibernate.connection.release_mode">after_transaction</property>
		<property name="hibernate.current_session_context_class">jta</property>
		
		
		<!-- <mapping class="com.tanmay.excelerate.entity.ReportManager"></mapping>
		<mapping class="com.grit.excelerate.entity.ReportFailureArchive"></mapping> -->
	</session-factory>
</hibernate-configuration>